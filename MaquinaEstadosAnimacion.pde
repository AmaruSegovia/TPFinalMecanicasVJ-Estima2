/** Máquina de Estados de Animación: Gestiona los estados de animación de los elementos renderizables del juego */
class MaquinaEstadosAnimacion {

  /** Estado de Movimiento a la izquierda */
  public static final int MOV_DERECHA = 1;

  /** Estado de Movimiento hacia abajo */
  public static final int MOV_IZQUIERDA = 2;

  /** Estado en reposo a la izquierda */
  public static final int ESTATICO_DERECHA = 3;

  /** Estado en reposo hacia abajo */
  public static final int ESTATICO_IZQUIERDA = 4;

  /** Estado de Movimiento hacia abajo */
  public static final int ATAQUE_DERECHA = 5;

  /** Estado de Movimiento hacia abajo */
  public static final int ATAQUE_IZQUIERDA = 6;

  /** Estado en reposo hacia abajo */
  public static final int MOV_ESPECIAL = 7;
  
}
